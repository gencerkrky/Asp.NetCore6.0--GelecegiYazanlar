@model List<ProductListComponentViewModel>

    <a class="btn btn-primary" asp-controller="Products" asp-action="index" > Ürünlere Git </a>

<table class="table table-hover  ">

    <thead class="">
        <tr>


            <th>İsim</th>
            <th>Açıklama</th>

        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>

                </tr>
        }

    </tbody>
</table>